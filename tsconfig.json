{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["ES2022"],
		"module": "ES2022",
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "bundler",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "__tests__/**/*"]
}
